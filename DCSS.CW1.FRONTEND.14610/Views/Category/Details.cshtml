@model DCSS.CW1.FRONTEND._14610.Models.Category

@{
    ViewBag.Title = "Details";
}

<h2 style="color: #333; text-align: center; font-weight: 600;">Details</h2>

<div style="width: 60%; margin: 20px auto; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
    <h4 style="color: #4CAF50; font-weight: bold; border-bottom: 2px solid #4CAF50; padding-bottom: 5px;">Category</h4>
    <hr style="border: none; border-top: 1px solid #ddd; margin-top: 10px; margin-bottom: 20px;" />

    <dl style="display: flex; flex-direction: column; gap: 10px;">
        <dt style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd style="margin: 0 0 10px 20px; color: #555;">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt style="font-weight: bold; color: #333;">
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd style="margin: 0 0 10px 20px; color: #555;">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<p style="text-align: center; margin-top: 20px;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new
    {
        style = "display: inline-block; padding: 8px 16px; background-color: #4CAF50; color: white; border-radius: 4px; font-weight: bold; text-transform: uppercase; text-decoration: none; margin-right: 10px;"
    })
    |
    @Html.ActionLink("Back to List", "Index", null, new
    {
        style = "display: inline-block; padding: 8px 16px; background-color: #333; color: white; border-radius: 4px; font-weight: bold; text-transform: uppercase; text-decoration: none; margin-left: 10px;"
    })
</p>
